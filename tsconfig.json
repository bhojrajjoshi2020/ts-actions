{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]  // Ensure 'node' is included here
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
